<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/list_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/textList"
        android:layout_width="wrap_content"
        android:layout_marginTop="40pt"
        android:layout_height="522dp"></ListView>

    <Button
        android:id="@+id/buttonLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130pt"
        android:layout_marginTop="5pt"
        android:text="Рус/Eng"/>

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textList"
        android:layout_marginTop="5pt"
        android:layout_marginLeft="5pt"
        android:text="Add" />

    <Button
        android:id="@+id/buttonRm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textList"
        android:layout_marginTop="5pt"
        android:layout_alignLeft="@+id/buttonLang"
        android:text="REMOVE" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10pt"
        android:textSize="15pt"
        android:layout_alignBottom="@+id/buttonLang"/>


</RelativeLayout>
